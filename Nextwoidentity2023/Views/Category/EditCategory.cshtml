@model Nextwoidentity2023.Models.Category

@{
    ViewData["Title"] = "EditCategory";
}

<h1>EditCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
